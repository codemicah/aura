# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_PATH=/api/v1
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_PATH=./data/defi-manager.db

# Network Configuration
# Chain ID determines the network (31337=local, 43113=testnet, 43114=mainnet)
CHAIN_ID=31337
RPC_URL=http://localhost:8545

# Smart Contract Addresses (all addresses come from environment)
YIELD_OPTIMIZER_ADDRESS=0x0000000000000000000000000000000000000000
TRADERJOE_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
BENQI_COMPTROLLER_ADDRESS=0x0000000000000000000000000000000000000000
YIELDYAK_FARM_ADDRESS=0x0000000000000000000000000000000000000000

# DeFi Protocol APIs
TRADERJOE_API_URL=https://api.traderjoexyz.com
BENQI_API_URL=https://api.benqi.fi
YIELDYAK_API_URL=https://api.yieldyak.com

# AI & Analytics
ENABLE_AI_RECOMMENDATIONS=true
MIN_PORTFOLIO_VALUE_USD=100
REBALANCE_THRESHOLD_PERCENT=5

# Security
API_RATE_LIMIT=100
API_WINDOW_MS=900000
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# External Services
COINGECKO_API_KEY=your-coingecko-api-key
DEFILLAMA_API_URL=https://api.llama.fi